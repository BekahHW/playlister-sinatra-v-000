<form action="/songs/<%=@song.slug%>" method="post">
    <input id='hidden' type='hidden' name='_method' value='patch'>
    
    <label>Song Name:</label><input type="text" name="name" id='name'>

  <p>Artist Name: <input type="text" name="artist[name]" id='artist_name' value='<%=@song.artist.name'%></p>

   
 <% Genre.all.each do |g|%>
 <%=g.name%>
   <input type="checkbox" name="genres[]" value="<%=g.id%>" id="<%=g.name%>" <%='checked' if @songs.genres.include?(g) %>>
  <% end %>

  <input type="submit" value="Save">
</form>

